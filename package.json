{
  "name": "telegram-bot-starter",
  "version": "1.0.0",
  "description": "Telegram bot starter kit for Javascript",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d dist --source-maps",
    "clean": "rm -rf dist",
    "debug": "nodemon --exec babel-node --inspect-brk src/index.js ",
    "serve": "node dist/index.js",
    "start": "nodemon src/index.js --exec babel-node",
    "test": "jest --runInBand --verbose",
    "coverage": "jest --coverage --runInBand --verbose",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\"",
    "lint": "eslint src --fix",
    "release": "npm version patch && git push && git push --tags",
    "migrate": "cd src/ && npx sequelize-cli db:migrate"
  },
  "keywords": [
    "telegram",
    "telegraf",
    "starter",
    "template",
    "bot"
  ],
  "author": {
    "name": "Fikri R",
    "email": "fikrizhanking@gmail.com"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "plugins": [
      "node",
      "jest"
    ],
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "rules": {},
    "env": {
      "jest/globals": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.0",
    "jest-cli": "^29.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sequelize-cli": "^6.5.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql2": "^2.3.3",
    "sequelize": "^6.25.2",
    "telegraf": "^4.10.0"
  }
}
